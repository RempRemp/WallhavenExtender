{
  "name": "Wallhaven Extender",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Adds download and slideshow links directly onto images on Wallhaven.cc",
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "32": "icons/icon32.png"
  },
  "permissions": [
    "*://alpha.wallhaven.cc/*",
    "*://wallhaven.cc/*",
    "downloads",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://alpha.wallhaven.cc/*",
        "*://wallhaven.cc/*"
      ],
      "exclude_matches": [
        "*://alpha.wallhaven.cc/forums/*",
        "*://wallhaven.cc/forums/*",
        "*://alpha.wallhaven.cc/settings/*"
      ],
      "css": [       
        "lib/lightbox2/lightbox.css",
        "src/content.css"
      ],
      "js": [
        "lib/jquery/jquery-2.1.4.min.js",
        "lib/lightbox2/lightbox.js",
        "src/util.js",
        "src/content_common.js",
        "src/content.js"
      ]
    },
    {
      "matches": [
        "*://alpha.wallhaven.cc/forums/*",
        "*://wallhaven.cc/forums/*"
      ],
      "exclude_matches": [
        "*://alpha.wallhaven.cc/settings/*"
      ],
      "css": [
        "lib/lightbox2/lightbox.css",
        "src/content.css"
      ],
      "js": [
        "lib/jquery/jquery-2.1.4.min.js",
        "lib/lightbox2/lightbox.js",
        "src/util.js",
        "src/content_common.js",
        "src/forum/content_forum.js"
      ]
    },
    {
      "matches": [
        "*://alpha.wallhaven.cc/settings/browsing/*"
      ],
      "js": [
        "lib/jquery/jquery-2.1.4.min.js",
        "src/content_browsing.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "src/util.js",
    "src/inject.js",
    "src/forum/inject_forum.js",
    "src/inject_common.js",
    "src/inject_lightbox.js",
    "lib/lightbox2/images/close.png",
    "lib/lightbox2/images/loading.gif",
    "lib/lightbox2/images/next.png",
    "lib/lightbox2/images/prev.png"
  ]
}